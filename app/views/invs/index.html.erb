					<tbody>
					<% num=1 %>
					<% @invs.each do |investment| %>
						<tr>
						<td><%= num %></td>
						<td><%= investment.inv_desc %></td>
						<td><%= investment.inv_trans.sum("amount") %></td>
						<td><%= link_to 'Details', investment %></td>
						<% num = num + 1 %>
					</tr>
