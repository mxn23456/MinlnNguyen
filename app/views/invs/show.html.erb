<div class="container">
	<div class="row">
			<div class="well">
			<h3 align="center"><%= @inv.inv_desc %></h3>

			<p align="center">
			<% if @inv.image.exists? %>
			<%= image_tag @inv.image.url(:medium)%>
			<% else %>
			<%= image_tag "http://placehold.it/250x250" %>
			<div class="span7 text-center">
				<button class="btn" > <a href=#>Add Image</a></button>
			</div>
			<% end %> 
			</p>
		</div> <!-- /well -->

		<div class="container">
			<div class="well">
				<div align="center">
					<h3 align="center">New Transaction</h3>
					<%= form_for(:inv_tran,url: inv_inv_trans_path(params[:id]),remote: true) do |f| %>
					Amount</br>
					<%= f.number_field :amount %> </br>
					Description</br>
					<%= f.text_field :transaction_desc %> </br>
					<%= f.date_select :transaction_date%> </br>
					<%= f.submit("Save",id: "trans_submit") %>
					<% end %>
				</div>
			</div>
		</div> <!--/container-->

		<!-- <div class="well"> -->
		<h1 align="center">Transactions </h1>
		<div class="table-responsive">
			<table class="table ">
				<thead>
					<tr>
						<th>Date</th>
						<th>Amount</th>
						<th>Description</th>
						<th colspan="1"></th>
					</tr>
				</thead>

				<tbody>
				<% @total = 0 %>
				<% @prev_month = @inv.inv_trans.first.transaction_date.month if @inv.inv_trans.first != nil %>
				<% @shaded = "info" %>
				<% @unshaded = "danger" %>
				<% @current_condition = @shaded %>
				<% @inv.inv_trans.all.each do |inv_tran| %>
					<% if inv_tran.transaction_date.month != @prev_month %>
						<% if @current_condition == @shaded %>
							<% @current_condition = @unshaded %>
						<% else %>
							<% @current_condition = @shaded %>
						<% end %>
					<% end %>
					<tr class= <%= @current_condition %> >
						<td><%= inv_tran.transaction_date %></td>
						<td><%= inv_tran.amount %></td>
						<td><%= inv_tran.transaction_desc %></td>
						<td><%= link_to 'Remove', inv_inv_tran_path(@inv,inv_tran), method: :delete, data: { confirm: 'Are you sure?' } %></td>
						<% @total = @total + inv_tran.amount %>
					</tr>
					<% @prev_month = inv_tran.transaction_date.month %>
				<% end %>
				</tbody>
			</table>
			<br>
			<div align="center">
				<p><strong>Total</strong></p>
				<p><%= @total %></p>
			</div>
		</div> <!--/table-responsive-->

		<% if @inv.notes %>
			<% if !@inv.notes.empty? %>
				<%= content_tag(:p,content_tag(:strong,"Notes")) %>
				<%= content_tag(:p, @inv.notes) %>
			<% end %>
		<% end %>

		<div align="right">
			<%= link_to 'Edit', edit_inv_path(@inv) %> |
			<%= link_to 'Back', invs_path %> |
			<%= link_to 'Delete', inv_path(@inv), method: :delete, data: {confirm: 'Are you sure?'} %>
		</div>
	</div> <!-- /row -->
</div> <!-- /container -->
